<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:id="@+id/listCardView"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <android.support.v7.widget.CardView
            android:id="@+id/iconCardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/foodCategoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iconCardView"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/foodDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodCategoryTextView"
            android:layout_toEndOf="@id/iconCardView"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginTop="4dp"
            />
    </RelativeLayout>



</android.support.v7.widget.CardView>